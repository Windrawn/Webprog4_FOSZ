<!DOCTYPE html>
<html>
	<head>
		<title>Macskás blog - Saját bejegyzések</title>
		<% include ../../common/head %>
	</head>
	<body>
		
		<% include ../../common/header %>
		
		<div class="container">
			<div class="szovegdoboz">
				<h1 id="black">Saját bejegyzések:</h1>
			</div>
			<div class="szovegdoboz">
				<hr>
				<% for(var i=0; i<bejegyzesek.length;i++){
				if (bejegyzesek[i].tema == "Fajták") { %>
				<div class="row">
					<div class="col-md-5">
						<img class="img-fluid rounded mb-3 mb-md-0" src="<%= bejegyzesek[i].kep %>" alt="">
					</div>
					<div class="col-md-7">
						<h3><%= bejegyzesek[i].cim %></h3>
						<h4>Típus: <%= bejegyzesek[i].tartalom %></h4>
						<p>Téma: <%=bejegyzesek[i].tema %></p>
						<a class="btn btn-secondary" href="/bejegyzesedit/edit/<%= bejegyzesek[i]._id %>">Szerkesztés</a>
					</div>
				</div>
				<hr>
				<% } else{ %>
				<div class="row">
					<div class="col-md-5">
						<img class="img-fluid rounded mb-3 mb-md-0" src="<%= bejegyzesek[i].kep %>" alt="">
					</div>
					<div class="col-md-7">
						<h3><%= bejegyzesek[i].cim %></h3>
						<p>Téma: <%=bejegyzesek[i].tema %></p>
						<div class="btn-group" role="group" aria-label="Basic example">
							<a class="btn btn-primary" href="/bejegyzes/<%= bejegyzesek[i]._id %>">Tovább</a>
							<a class="btn btn-secondary" href="/bejegyzesedit/edit/<%= bejegyzesek[i]._id %>">Szerkesztés</a>
						</div>
					</div>
				</div>
				<hr>
				<% }
				   } %>
			</div>
			<div class="szovegdoboz">
				<!--
				<ul class="pagination justify-content-center">
					<li class="page-item">
						<a class="page-link" href="#" aria-label="Previous">
							<span aria-hidden="true">&laquo;</span>
							<span class="sr-only">Previous</span>
						</a>
					</li>
					<%  %>
					<li class="page-item">
						<a class="page-link" href="#">0</a>
					</li>
					<%  %>
					<li class="page-item">
						<a class="page-link" href="#" aria-label="Next">
							<span aria-hidden="true">&raquo;</span>
							<span class="sr-only">Next</span>
						</a>
					</li>
				</ul>
				<br>
				-->
				<div class="btn-group" role="group" aria-label="Basic example">
					<a class="btn btn-info" href="">Az oldal tetejére</a>
					<a class="btn btn-info" href="/">Vissza a kezdőoldalra</a>
				</div>
			</div>
		</div>

		<% include ../../common/footer %>
		<% include ../../common/script %>
		
	</body>
</html>